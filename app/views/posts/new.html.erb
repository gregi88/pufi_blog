<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1>New post</h1>

      <div class="post-box">
        <%= simple_form_for @post do |f| %>
            <div class="row">
              <%= f.input :title %>
            </div>
            <div class="row">
              <%= f.input :content %>
            </div>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
         <%= f.submit "Create post" , class: "btn-primary", id: "form-button-home" %>
        <% end %>

      </div>
  </div>
  </div>
</div>


