<h1 class="main-title">My blog posts</h1>
<div class="card">
  <% @posts.each do |post| %>
    <div class="post-title" >
      <%= post.title %>
    </div>
  <div class="img">
    <% if post.photo.present? %>
      <%= cl_image_tag post.photo.url, height: 300, width: 300, crop: :fill %>
    <% end %>
  </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  <% end %>
</div>
